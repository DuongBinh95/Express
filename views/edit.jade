extends layout

block content
    h1 Edit Student
    .row
        .col-md-6.col-md-offset-3
            form(method="post")
                .form-group
                    label Name
                    input(name="name", value="#{student.name}").form-control
                .form-group
                    label Address
                    input(name="address", value="#{student.address}").form-control
                .form-group
                    label Phone
                    input(name="phone", value="#{student.phone}").form-control
                .form-group
                    label Email
                    input(name="email", value="#{student.email}").form-control
                .form-group
                    input(type="submit", value="Update").form-control.btn.btn-success
